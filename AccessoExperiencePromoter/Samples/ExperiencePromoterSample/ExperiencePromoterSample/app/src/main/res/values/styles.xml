<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessagesListItemStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="textName">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/text_name_line_spacing_extra</item>
    </style>
    <style name="textName.textPrimary">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textDetail">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">@dimen/text_detail_line_spacing_extra</item>
    </style>
    <style name="textDetail.heavy">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textDetail.heavy.discount">
        <item name="android:textColor">@color/colorDiscount</item>
    </style>
    <style name="textLabel">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">@dimen/text_label_line_spacing_extra</item>
    </style>
    <style name="textLabel.heavy">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textLabel.heavy.textSecondary">
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    <style name="textBody">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_line_spacing_extra</item>
    </style>
    <style name="textBody.transparent">
        <item name="android:alpha">0.5</item>
    </style>
    <style name="textBody.transparent.textPrimary">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <style name="MessagesDetailBackgroundStyle">
        <item name="android:background">@color/colorCanvas</item>
    </style>
    <style name="MessagesDetailViewUpNav">
        <item name="android:layout_marginStart">@dimen/detail_view_up_button_marginStart</item>
        <item name="android:layout_marginLeft">@dimen/detail_view_up_button_marginStart</item>
        <item name="android:layout_marginTop">@dimen/detail_view_up_button_marginTop</item>
        <item name="android:padding">@dimen/detail_view_up_button_padding</item>
    </style>
    <style name="MessagesDetailCardBackgroundStyle">
        <item name="android:background">@color/colorCard</item>
    </style>
    <style name="textHeadline">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/text_headline_line_spacing_extra</item>
    </style>
    <style name="textHeadline.textPrimary">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <style name="textBody.textPrimary">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <style name="textCategory">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/text_category_line_spacing_extra</item>
    </style>
    <style name="textCategory.transparent">
        <item name="android:alpha">0.5</item>
    </style>
    <style name="textCategory.transparent.textPrimary">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
</resources>